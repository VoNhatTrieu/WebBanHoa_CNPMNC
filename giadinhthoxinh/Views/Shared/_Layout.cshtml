        <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
        <script src="/signalr/hubs"></script>

        <script>
        $(function () {
            $('.chatbox-toggle').on('click', function () { $('.chatbox').toggleClass('active'); });
            $('.close-chat').on('click', function () { $('.chatbox').removeClass('active'); });

            var chat = $.connection.chatHub;
            var currentUser = '@(User.Identity.IsAuthenticated ? User.Identity.Name : "Guest")';

            chat.client.broadcastMessage = function (user, message) {
                var t = new Date().toLocaleTimeString();
                var css = user === "Admin" ? "bot" : "user";
                var name = user === "Admin" ? "Hỗ trợ" : user;
                $('#chatbox-body').append('<div class="chat-message ' + css + '"><strong>' + name + ':</strong> ' + message + ' <small>(' + t + ')</small></div>')
                                  .scrollTop($('#chatbox-body')[0].scrollHeight);
            };

            $(document).on('click', '.chatbox-suggestions .suggestion', function () {
                var q = $(this).text(), a = $(this).data("reply"), t = new Date().toLocaleTimeString();
                $('#chatbox-body')
                    .append('<div class="chat-message user"><strong>Bạn:</strong> ' + q + ' <small>(' + t + ')</small></div>')
                    .append('<div class="chat-message bot"><strong>Hỗ trợ:</strong> ' + a + ' <small>(' + t + ')</small></div>')
                    .scrollTop($('#chatbox-body')[0].scrollHeight);
            });

            $.connection.hub.start().done(function () {
                $('#chatbox-form').on('submit', function (e) {
                    e.preventDefault();
                    var msg = $('#chatbox-input').val().trim(); if (!msg) return;
                    $('#chatbox-input').val('');
                    var t = new Date().toLocaleTimeString();
                    $('#chatbox-body').append('<div class="chat-message user"><strong>' + currentUser + ':</strong> ' + msg + ' <small>(' + t + ')</small></div>');

                    $.ajax({
                        url: '/AI/Reply', type: 'POST', data: { message: msg },
                        success: function (reply) {
                            $('#chatbox-body').append('<div class="chat-message admin"><strong>AI:</strong> ' + reply + ' <small>(' + new Date().toLocaleTimeString() + ')</small></div>')
                                              .scrollTop($('#chatbox-body')[0].scrollHeight);
                        }
                    });
                });
                $('#chatbox-input').on('keypress', function (e) { if (e.which === 13) $('#chatbox-form').submit(); });
            });
        });

        // FOOTER FX: Ripple + Magnetic + Petals
        (function(){
            var footer = document.querySelector('.container-fluid.bg-dark.footer');
            if (!footer) return;

            // Ripple effect
            footer.addEventListener('click', function(e){
                var btn = e.target.closest('.btn');
                if(!btn) return;
                var r = document.createElement('span');
                r.className = 'fx-ripple';
                var rect = btn.getBoundingClientRect();
                r.style.left = (e.clientX - rect.left) + 'px';
                r.style.top  = (e.clientY - rect.top)  + 'px';
                btn.appendChild(r);
                void r.offsetWidth; // force reflow
                r.classList.add('show');
                setTimeout(function(){ r.remove(); }, 700);
            }, false);

            // Magnetic hover for social buttons
            var socials = footer.querySelectorAll('.btn.btn-square');
            socials.forEach(function(b){
                b.addEventListener('mousemove', function(ev){
                    var r = b.getBoundingClientRect();
                    var dx = (ev.clientX - (r.left + r.width/2)) / (r.width/2);
                    var dy = (ev.clientY - (r.top  + r.height/2)) / (r.height/2);
                    b.style.transform = 'translate(' + (dx*5) + 'px,' + (dy*5) + 'px) scale(1.08)';
                });
                b.addEventListener('mouseleave', function(){ b.style.transform = ''; });
            });
        })();

        // Petals floating
        (function(){
            var wrap = document.querySelector('.footer-petals');
            if (!wrap) return;

            var PETALS = 14, MIN_DUR = 7, MAX_DUR = 14, SPAWN_EVERY = 900;

            for (var i = 0; i < PETALS; i++) spawn();

            var timer = setInterval(function(){
                if (!document.body.contains(wrap)) { clearInterval(timer); return; }
                spawn();
            }, SPAWN_EVERY);

            function spawn(){
                var p = document.createElement('span');
                p.className = 'petal';
                var vw = wrap.clientWidth || window.innerWidth;
                p.style.left = (Math.random() * vw) + 'px';
                var s = 0.7 + Math.random()*0.9;
                p.style.width  = (12*s) + 'px';
                p.style.height = (10*s) + 'px';
                var delay = Math.random() * 2.0;
                var dur   = MIN_DUR + Math.random()*(MAX_DUR - MIN_DUR);
                p.style.animationDuration = dur + 's';
                p.style.animationDelay    = delay + 's';
                var sway = (Math.random()*60 + 20) * (Math.random()<.5 ? -1 : 1);
                p.style.setProperty('--sx', sway + 'px');
                p.style.transform = 'rotate(' + (Math.random()*60 - 30) + 'deg)';
                p.addEventListener('animationend', function(){ p.remove(); });
                wrap.appendChild(p);
            }
        })();
        </script>

