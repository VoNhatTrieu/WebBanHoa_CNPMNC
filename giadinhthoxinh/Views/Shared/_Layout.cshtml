        /* ===================== FOOTER FX (Buttons + Petals) ===================== */
        .container-fluid.bg-dark.footer {
            position: relative;
            overflow: hidden;
            isolation: isolate;
        }

            /* Buttons: lift + glow + ripple (tất cả .btn trong footer) */
            .container-fluid.bg-dark.footer .btn {
                position: relative;
                overflow: hidden;
                transform: translateZ(0);
                transition: transform .2s ease, box-shadow .25s ease, filter .2s ease;
                will-change: transform, box-shadow, filter;
            }

                .container-fluid.bg-dark.footer .btn:hover {
                    transform: translateY(-3px) scale(1.03);
                    box-shadow: 0 10px 26px rgba(138,180,255,.28);
                    filter: saturate(1.05);
                }

                .container-fluid.bg-dark.footer .btn:active {
                    transform: translateY(-1px) scale(0.99);
                    box-shadow: 0 6px 18px rgba(138,180,255,.22);
                }

                .container-fluid.bg-dark.footer .btn.btn-primary {
                    background: linear-gradient(135deg, #5a8bff, #8ab4ff);
                    border: none;
                }

                    .container-fluid.bg-dark.footer .btn.btn-primary::after {
                        content: "";
                        position: absolute;
                        inset: 0;
                        background: linear-gradient(120deg, transparent 0%, rgba(255,255,255,.55) 45%, transparent 70%);
                        transform: translateX(-120%);
                        transition: transform .6s ease;
                        mix-blend-mode: screen;
                        opacity: .55;
                        pointer-events: none;
                    }

                    .container-fluid.bg-dark.footer .btn.btn-primary:hover::after {
                        transform: translateX(0);
                    }

                /* Social buttons: neon glow (magnetic xử lý bằng JS) */
                .container-fluid.bg-dark.footer .btn.btn-square {
                    border-color: rgba(255,255,255,.35) !important;
                    transition: transform .12s ease, box-shadow .25s ease, border-color .12s ease, background-color .2s ease;
                    box-shadow: 0 0 0 rgba(138,180,255,0);
                }

                    .container-fluid.bg-dark.footer .btn.btn-square:hover {
                        border-color: rgba(138,180,255,.9) !important;
                        background-color: rgba(255,255,255,.12) !important;
                        box-shadow: 0 8px 24px rgba(138,180,255,.25), 0 0 16px rgba(138,180,255,.28) inset;
                    }

            /* Ripple phần tử */
            .container-fluid.bg-dark.footer .fx-ripple {
                position: absolute;
                width: 10px;
                height: 10px;
                border-radius: 50%;
                background: rgba(255,255,255,.45);
                transform: scale(0);
                opacity: .75;
                pointer-events: none;
                transition: transform .55s ease, opacity .7s ease;
            }

                .container-fluid.bg-dark.footer .fx-ripple.show {
                    transform: scale(26);
                    opacity: 0;
                }

        /* Petals */
        .footer-petals {
            position: absolute;
            inset: 0;
            pointer-events: none;
            z-index: 1;
        }

            .footer-petals .petal {
                position: absolute;
                top: -40px;
                width: 14px;
                height: 12px;
                background: radial-gradient(circle at 40% 40%, #ffd1dc 0%, #ff8fb3 60%, #ff679b 100%);
                border-radius: 60% 40% 60% 40%/60% 40% 60% 40%;
                opacity: .85;
                filter: blur(.2px);
                will-change: transform, opacity;
                transform-origin: center;
                animation: petalFloat linear forwards;
            }

                .footer-petals .petal::after {
                    content: "";
                    position: absolute;
                    inset: 2px;
                    border-radius: inherit;
