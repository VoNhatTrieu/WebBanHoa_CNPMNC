        @RenderSection("scripts", required: false)

        <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
        <script src="~/Content/assets/plugins/Isotope/isotope.pkgd.min.js"></script>
        <script src="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
        <script src="~/Content/assets/plugins/easing/easing.js"></script>
        <script src="~/Content/assets/js/custom.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- thêm SignalR -->
        <script src="~/Scripts/jquery-3.6.0.min.js"></script>
        <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
        <script src="/signalr/hubs"></script>

        <script>
    $(function () {
        console.log("=== FRONTEND CHAT DEBUG ===");

        // Toggle chatbox
        $('.chatbox-toggle').click(function () {
            $('.chatbox').toggleClass('active');
        });

        $('.close-chat').click(function () {
            $('.chatbox').removeClass('active');
        });

        var chat = $.connection.chatHub;
        var isConnected = false;

        // Lấy tên user (nếu chưa login thì dùng Guest)
        var currentUser = '@(User.Identity.IsAuthenticated ? User.Identity.Name : "Guest")';

        // Nhận tin nhắn từ server
        chat.client.broadcastMessage = function (user, message) {
            var timestamp = new Date().toLocaleTimeString();
            var cssClass = user === "Admin" ? "bot" : "user";
            var displayName = user === "Admin" ? "Hỗ trợ" : user;

            var messageHtml = '<div class="chat-message ' + cssClass + '">' +
                '<strong>' + displayName + ':</strong> ' + message +
                ' <small style="font-size:11px; opacity:0.7;">(' + timestamp + ')</small>' +
                '</div>';

            $('#chatbox-body').append(messageHtml);
            $('#chatbox-body').scrollTop($('#chatbox-body')[0].scrollHeight);
        };
        $(document).on('click', '.chatbox-suggestions .suggestion', function () {
            var question = $(this).text();
            var answer = $(this).data("reply");
            var timestamp = new Date().toLocaleTimeString();

            var userMsg = '<div class="chat-message user"><strong>Bạn:</strong> ' + question +
                ' <small>(' + timestamp + ')</small></div>';
            $('#chatbox-body').append(userMsg);

            var botMsg = '<div class="chat-message bot"><strong>Hỗ trợ:</strong> ' + answer +
                ' <small>(' + timestamp + ')</small></div>';
            $('#chatbox-body').append(botMsg);

            $('#chatbox-body').scrollTop($('#chatbox-body')[0].scrollHeight);
        });
        // Kết nối SignalR
        $.connection.hub.start()
            .done(function () {
                console.log("SignalR connected successfully");
                isConnected = true;
                $('.chatbox-header span:first').text('Flower KingDom Support (Online)');

                // Gửi tin nhắn
                $('#chatbox-form').submit(function (e) {
                    e.preventDefault();
                    var message = $('#chatbox-input').val().trim();
                    if (!message) return;
                    $('#chatbox-input').val('');

                    // Append local (tin của user)
                    var timestamp = new Date().toLocaleTimeString();
                    var userMessageHtml = '<div class="chat-message user">' +
                        '<strong>' + currentUser + ':</strong> ' + message +
                        ' <small>(' + timestamp + ')</small>' +
                        '</div>';
                    $('#chatbox-body').append(userMessageHtml);

                    // Gọi AI Controller để lấy câu trả lời
                    $.ajax({
                        url: '/AI/Reply',
                        type: 'POST',
                        data: { message: message },
                        success: function (reply) {
                            var aiMsg = '<div class="chat-message admin">' +
                                '<strong>AI:</strong> ' + reply +
                                ' <small>(' + new Date().toLocaleTimeString() + ')</small>' +
                                '</div>';
                            $('#chatbox-body').append(aiMsg);
                            $('#chatbox-body').scrollTop($('#chatbox-body')[0].scrollHeight);
                        },
                        error: function (xhr) {
                            console.error("AI call failed:", xhr);
                        }
                    });
                });


                // Enter để gửi
                $('#chatbox-input').keypress(function (e) {
                    if (e.which === 13) {
                        $('#chatbox-form').submit();
                    }
                });
            })
            .fail(function (err) {
                console.error("SignalR connection failed:", err);
                isConnected = false;
                $('.chatbox-header span:first').text('Flower KingDom Support (Offline)');
            });
    });
        </script>



    </div>
</body>
</html>