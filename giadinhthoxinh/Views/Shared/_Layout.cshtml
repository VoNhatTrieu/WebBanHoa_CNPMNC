        <script>
       let messageCount = 0;
        const state = {
            isOpen: false,
            messages: [],
            currentUser: 'Khách'
        };

        // DOM Elements
        const chatboxToggle = document.querySelector('.chatbox-toggle');
        const chatbox = document.querySelector('.chatbox');
        const closeChat = document.querySelector('.close-chat');
        const minimizeChat = document.querySelector('.minimize-chat');
        const chatboxBody = document.getElementById('chatbox-body');
        const chatboxForm = document.getElementById('chatbox-form');
        const chatboxInput = document.getElementById('chatbox-input');
        const typingIndicator = document.getElementById('typing-indicator');
        const suggestions = document.querySelectorAll('.suggestion');
        const notificationBadge = document.querySelector('.notification-badge');

        // Toggle chatbox
        chatboxToggle.addEventListener('click', () => {
            chatbox.classList.toggle('active');
            state.isOpen = !state.isOpen;
            if (state.isOpen) {
                chatboxInput.focus();
                notificationBadge.style.display = 'none';
            }
        });

        // Close chat
        closeChat.addEventListener('click', () => {
            chatbox.classList.remove('active');
            state.isOpen = false;
        });

        // Minimize chat
        minimizeChat.addEventListener('click', () => {
            chatbox.classList.remove('active');
            state.isOpen = false;
        });

        // Send message
        chatboxForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const message = chatboxInput.value.trim();
            if (!message) return;

            addMessage(message, 'user');
            chatboxInput.value = '';

            // Show typing indicator
            showTypingIndicator();

            // Simulate bot response
            setTimeout(() => {
                hideTypingIndicator();
                const botResponse = generateBotResponse(message);
                addMessage(botResponse, 'bot');
            }, 1500);
        });

        // Suggestion buttons
        suggestions.forEach(btn => {
            btn.addEventListener('click', () => {
                const question = btn.textContent.trim();
                const answer = btn.dataset.reply;

                addMessage(question, 'user');

                showTypingIndicator();
                setTimeout(() => {
                    hideTypingIndicator();
                    addMessage(answer, 'bot');
                }, 1000);
            });
        });

        // Add message function
        function addMessage(text, type) {
            const time = new Date().toLocaleTimeString('vi-VN', {
                hour: '2-digit',
                minute: '2-digit'
            });

            const messageDiv = document.createElement('div');
            messageDiv.className = `chat-message ${type}`;

            if (type === 'bot') {
                messageDiv.innerHTML = `
                    <div class="message-avatar">
                        <i class="fa fa-robot"></i>
                    </div>
                    <div class="message-content">
                        <div class="message-bubble">${text}</div>
                        <div class="message-time">${time}</div>
                    </div>
                `;
            } else {
                messageDiv.innerHTML = `
                    <div class="message-content">
                        <div class="message-bubble">${text}</div>
                        <div class="message-time">${time}</div>
                    </div>
                    <div class="message-avatar">
                        <i class="fa fa-user"></i>
                    </div>
                `;
            }

            // Insert before typing indicator
            chatboxBody.insertBefore(messageDiv, typingIndicator);

            // Scroll to bottom
            chatboxBody.scrollTop = chatboxBody.scrollHeight;

            // Add to state
            state.messages.push({ text, type, time });

            // Show notification if chat is closed
            if (!state.isOpen && type === 'bot') {
                messageCount++;
                notificationBadge.textContent = messageCount;
                notificationBadge.style.display = 'flex';
            }
        }

        // Typing indicator
        function showTypingIndicator() {
            typingIndicator.classList.add('show');
            chatboxBody.scrollTop = chatboxBody.scrollHeight;
        }

        function hideTypingIndicator() {
            typingIndicator.classList.remove('show');
        }

        // Generate bot response (simple AI simulation)
        function generateBotResponse(message) {
            const lowerMessage = message.toLowerCase();

            if (lowerMessage.includes('giá') || lowerMessage.includes('tiền')) {
                return 'Giá hoa của shop rất đa dạng, từ 200.000đ đến 2.000.000đ tùy loại và mẫu. Bạn muốn xem mẫu nào cụ thể không ạ? 🌸';
            } else if (lowerMessage.includes('giao') || lowerMessage.includes('ship')) {
                return 'Shop có giao hàng toàn quốc! Miễn phí ship nội thành cho đơn từ 500k. Bạn ở khu vực nào ạ? 🚚';
            } else if (lowerMessage.includes('giờ') || lowerMessage.includes('mở')) {
                return 'Shop mở cửa từ 8:00 sáng đến 21:00 tối hàng ngày ạ! Kể cả cuối tuần và lễ 🕐';
            } else if (lowerMessage.includes('cảm ơn') || lowerMessage.includes('thanks')) {
                return 'Rất vui được hỗ trợ bạn! Nếu cần thêm thông tin gì, đừng ngại liên hệ nhé 😊';
            } else if (lowerMessage.includes('tư vấn') || lowerMessage.includes('hỏi')) {
                return 'Bạn có thể gọi hotline 0123 456 789 hoặc nhắn tin qua Fanpage để được tư vấn chi tiết hơn ạ! 📞';
            } else {
                return 'Cảm ơn bạn đã liên hệ! Để được hỗ trợ tốt nhất, bạn có thể chọn các gợi ý phía trên hoặc liên hệ hotline 0123 456 789 nhé! 💐';
            }
        }

        // Emoji button (placeholder)
        document.querySelector('.emoji-btn').addEventListener('click', () => {
            alert('Tính năng emoji đang được phát triển! 😊');
        });

        // Attach button (placeholder)
        document.querySelector('.attach-btn').addEventListener('click', () => {
            alert('Tính năng đính kèm file đang được phát triển! 📎');
        });

        // Enter key to send
        chatboxInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                chatboxForm.dispatchEvent(new Event('submit'));
            }
        });

        // Initialize - send welcome message after 2 seconds
        setTimeout(() => {
            if (!state.isOpen) {
                messageCount = 1;
                notificationBadge.textContent = messageCount;
                notificationBadge.style.display = 'flex';
            }
        }, 2000);

        // ==================== SEARCH DROPDOWN WITH SUGGESTIONS ====================
        (function() {
            const searchInput = document.getElementById('searchInput');
            const searchDropdown = document.getElementById('searchDropdown');
            const searchDropdownList = document.getElementById('searchDropdownList');
            const searchLoading = document.getElementById('searchLoading');
            const searchResultCount = document.getElementById('searchResultCount');
            const searchViewAll = document.getElementById('searchViewAll');
            const searchForm = document.getElementById('searchForm');

            let searchTimeout;
            let currentSearchTerm = '';

            if (!searchInput || !searchDropdown) return;

            // Show dropdown when input is focused
            searchInput.addEventListener('focus', function() {
                if (searchInput.value.trim() !== '') {
                    performSearch(searchInput.value.trim());
                } else {
                    showRecentOrPopular();
                }
            });

            // Search on input
            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.trim();
                currentSearchTerm = searchTerm;

                clearTimeout(searchTimeout);

                if (searchTerm === '') {
                    showRecentOrPopular();
                    return;
                }

                // Debounce search
                searchTimeout = setTimeout(function() {
                    performSearch(searchTerm);
                }, 300);
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!searchInput.contains(e.target) && !searchDropdown.contains(e.target)) {
                    searchDropdown.classList.remove('show');
                }
            });

            let isShowingAll = false;
            let allProducts = [];

            // Update view all link
            searchViewAll.addEventListener('click', function(e) {
                e.preventDefault();
                
                if (!isShowingAll) {
                    // Show all products in dropdown
                    isShowingAll = true;
                    searchDropdown.classList.add('expanded');
                    searchViewAll.innerHTML = '<i class="fa fa-compress"></i> Thu gọn';
                    loadAllProducts();
                } else {
                    // Collapse back to limited results
                    isShowingAll = false;
                    searchDropdown.classList.remove('expanded');
                    searchViewAll.innerHTML = '<i class="fa fa-th-large"></i> Xem tất cả kết quả';
                    performSearch(currentSearchTerm || '');
                }
            });

            // Perform search
            function performSearch(searchTerm) {
                searchDropdown.classList.add('show');
                searchDropdown.classList.remove('expanded');
                showLoading();
                isShowingAll = false;
                searchViewAll.innerHTML = '<i class="fa fa-th-large"></i> Xem tất cả kết quả';

                // AJAX call to get search suggestions
                $.ajax({
                    url: '/Home/SearchSuggestions',
                    type: 'GET',
                    data: { term: searchTerm, maxResults: 8 },
                    success: function(response) {
                        if (response.success && response.products) {
                            // Debug: Log image paths
                            console.log('Search products:', response.products);
                            
                            allProducts = response.products; // Save all products
                            const products = response.products.map(p => ({
                                id: p.id,
                                name: p.name,
                                category: p.category,
                                price: formatPrice(p.price),
                                image: getProductImageUrl(p.image)
                            }));
                            
                            // Debug: Log processed products
                            console.log('Processed products:', products);
                            
                            displayResults(products, searchTerm);
                            
                            // Update button text based on results
                            if (response.totalCount > 8) {
                                searchViewAll.innerHTML = '<i class="fa fa-th-large"></i> Xem tất cả ' + response.totalCount + ' kết quả';
                                searchViewAll.style.display = 'inline-flex';
                            } else {
                                searchViewAll.style.display = 'none';
                            }
                        } else {
                            displayResults([], searchTerm);
                        }
                    },
                    error: function() {
                        hideLoading();
                        searchDropdownList.innerHTML = `
                            <div class="search-empty">
                                <i class="fa fa-exclamation-triangle"></i>
                                <p>Đã xảy ra lỗi khi tìm kiếm</p>
                            </div>
                        `;
                    }
                });
            }

            // Load all products
            function loadAllProducts() {
                showLoading();

                $.ajax({
                    url: '/Home/SearchSuggestions',
                    type: 'GET',
                    data: { term: currentSearchTerm || '', maxResults: 100 },
                    success: function(response) {
                        if (response.success && response.products) {
                            allProducts = response.products;
                            const products = response.products.map(p => ({
                                id: p.id,
                                name: p.name,
                                category: p.category,
                                price: formatPrice(p.price),
                                image: getProductImageUrl(p.image)
                            }));
                            displayResults(products, currentSearchTerm || '');
                        }
                    },
                    error: function() {
                        hideLoading();
                    }
                });
            }

            // Format price
            function formatPrice(price) {
                if (!price) return '0';
                return parseFloat(price).toLocaleString('vi-VN');
            }

            // Get product image URL
            function getProductImageUrl(imagePath) {
                if (!imagePath) {
                    return '/Content/assets/images/logo/logoshop.jpg';
                }
                
                // If already full URL or starts with /, return as is
                if (imagePath.startsWith('http://') || imagePath.startsWith('https://') || imagePath.startsWith('/')) {
                    return imagePath;
                }
                
                // If path starts with ~, remove it and add /
                if (imagePath.startsWith('~')) {
                    return imagePath.replace('~', '');
                }
                
                // Default: assume it's in Content/assets/images/
                return '/Content/assets/images/' + imagePath;
            }

            // Show recent or popular products
            function showRecentOrPopular() {
                searchDropdown.classList.add('show');
                searchDropdown.classList.remove('expanded');
                searchResultCount.textContent = 'Sản phẩm phổ biến';
                showLoading();
                isShowingAll = false;

                // AJAX call to get popular products
                $.ajax({
                    url: '/Home/SearchSuggestions',
                    type: 'GET',
                    data: { term: '', maxResults: 6 },
                    success: function(response) {
                        if (response.success && response.products) {
                            const products = response.products.map(p => ({
                                id: p.id,
                                name: p.name,
                                category: p.category,
                                price: formatPrice(p.price),
                                image: getProductImageUrl(p.image)
                            }));
                            displayResults(products, '');
                            
                            // Show view all button for popular products
                            if (response.totalCount > 6) {
                                searchViewAll.innerHTML = '<i class="fa fa-th-large"></i> Xem tất cả ' + response.totalCount + ' sản phẩm';
                                searchViewAll.style.display = 'inline-flex';
                            } else {
                                searchViewAll.style.display = 'none';
                            }
                        } else {
                            hideLoading();
                        }
                    },
                    error: function() {
                        hideLoading();
                    }
                });
            }

            // Display search results
            function displayResults(products, searchTerm) {
                hideLoading();

                if (products.length === 0) {
                    searchResultCount.textContent = 'Không tìm thấy';
                    searchDropdownList.innerHTML = `
                        <div class="search-empty">
                            <i class="fa fa-search"></i>
                            <p>Không tìm thấy sản phẩm "${searchTerm}"</p>
                        </div>
                    `;
                    return;
                }

                searchResultCount.textContent = products.length + ' kết quả';

                const resultsHTML = products.map(product => `
                    <a href="/Home/ProductDetail/${product.id}" class="search-product-item">
                        <img src="${product.image}" 
                             alt="${product.name}" 
                             class="search-product-img" 
                             onerror="this.onerror=null; this.src='/Content/assets/images/logo/logoshop.jpg';" />
                        <div class="search-product-info">
                            <div class="search-product-name">${highlightText(product.name, searchTerm)}</div>
                            <div class="search-product-category"><i class="fa fa-tag"></i> ${product.category}</div>
                            <div class="search-product-price">${product.price} đ</div>
                        </div>
                    </a>
                `).join('');

                searchDropdownList.innerHTML = resultsHTML;
            }

            // Highlight search term in text
            function highlightText(text, searchTerm) {
                if (!searchTerm) return text;
                const regex = new RegExp(`(${searchTerm})`, 'gi');
                return text.replace(regex, '<mark style="background: #fff59d; padding: 0 2px;">$1</mark>');
            }

            // Show loading
            function showLoading() {
                searchLoading.style.display = 'block';
                searchDropdownList.innerHTML = '';
                searchDropdownList.appendChild(searchLoading);
            }

            // Hide loading
            function hideLoading() {
                searchLoading.style.display = 'none';
            }
        })();

        // ==================== MEGA MENU INTERACTIVE ====================
        (function() {
            const megaMenuItem = document.querySelector('.mega-menu-item');
            const productDropdown = document.getElementById('productDropdown');
            const megaMenuDropdown = document.querySelector('.mega-menu-dropdown');
            
            if (!megaMenuItem || !productDropdown || !megaMenuDropdown) return;

            let closeTimeout;

            // Desktop: Hover to open
            if (window.innerWidth > 992) {
                megaMenuItem.addEventListener('mouseenter', function() {
                    clearTimeout(closeTimeout);
                    megaMenuDropdown.classList.add('show');
                });

                megaMenuItem.addEventListener('mouseleave', function() {
                    closeTimeout = setTimeout(function() {
                        megaMenuDropdown.classList.remove('show');
                    }, 300);
                });
            }

            // Mobile & Tablet: Click to toggle
            productDropdown.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                // Toggle dropdown
                if (megaMenuDropdown.classList.contains('show')) {
                    megaMenuDropdown.classList.remove('show');
                } else {
                    // Close other dropdowns first
                    document.querySelectorAll('.dropdown-menu.show').forEach(function(dd) {
                        dd.classList.remove('show');
                    });
                    megaMenuDropdown.classList.add('show');
                }
            });

            // Close when clicking outside
            document.addEventListener('click', function(e) {
                if (!megaMenuItem.contains(e.target)) {
                    megaMenuDropdown.classList.remove('show');
                }
            });

            // Smooth scroll for mega menu grid
            const megaMenuGrid = document.querySelector('.mega-menu-grid');
            if (megaMenuGrid) {
                megaMenuGrid.addEventListener('wheel', function(e) {
                    if (megaMenuGrid.scrollHeight > megaMenuGrid.clientHeight) {
                        e.stopPropagation();
                    }
                });
            }

            // Handle window resize
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    if (window.innerWidth > 992) {
                        // Reset to hover behavior on desktop
                        megaMenuDropdown.classList.remove('show');
                    }
                }, 250);
            });

            // Add ripple effect to menu cards
            const menuCards = document.querySelectorAll('.mega-menu-card');
            menuCards.forEach(function(card) {
                card.addEventListener('click', function(e) {
                    const ripple = document.createElement('span');
                    ripple.classList.add('card-ripple');
                    
                    const rect = card.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;
                    
                    ripple.style.width = ripple.style.height = size + 'px';
                    ripple.style.left = x + 'px';
                    ripple.style.top = y + 'px';
                    
                    card.appendChild(ripple);
                    
                    setTimeout(function() {
                        ripple.remove();
                    }, 600);
                });
            });
        })();

        // FOOTER FX: Ripple + Magnetic + Petals
        (function(){
            var footer = document.querySelector('.container-fluid.bg-dark.footer');
            if (!footer) return;

            // Ripple effect
            footer.addEventListener('click', function(e){
                var btn = e.target.closest('.btn');
                if(!btn) return;
                var r = document.createElement('span');
                r.className = 'fx-ripple';
                var rect = btn.getBoundingClientRect();
                r.style.left = (e.clientX - rect.left) + 'px';
                r.style.top  = (e.clientY - rect.top)  + 'px';
                btn.appendChild(r);
                void r.offsetWidth; // force reflow
                r.classList.add('show');
                setTimeout(function(){ r.remove(); }, 700);
            }, false);

            // Magnetic hover for social buttons
            var socials = footer.querySelectorAll('.btn.btn-square');
            socials.forEach(function(b){
                b.addEventListener('mousemove', function(ev){
                    var r = b.getBoundingClientRect();
                    var dx = (ev.clientX - (r.left + r.width/2)) / (r.width/2);
                    var dy = (ev.clientY - (r.top  + r.height/2)) / (r.height/2);
                    b.style.transform = 'translate(' + (dx*5) + 'px,' + (dy*5) + 'px) scale(1.08)';
                });
                b.addEventListener('mouseleave', function(){ b.style.transform = ''; });
            });
        })();

        // Petals floating
        (function(){
            var wrap = document.querySelector('.footer-petals');
            if (!wrap) return;

            var PETALS = 14, MIN_DUR = 7, MAX_DUR = 14, SPAWN_EVERY = 900;

            for (var i = 0; i < PETALS; i++) spawn();

            var timer = setInterval(function(){
                if (!document.body.contains(wrap)) { clearInterval(timer); return; }
                spawn();
            }, SPAWN_EVERY);

            function spawn(){
                var p = document.createElement('span');
                p.className = 'petal';
                var vw = wrap.clientWidth || window.innerWidth;
                p.style.left = (Math.random() * vw) + 'px';
                var s = 0.7 + Math.random()*0.9;
                p.style.width  = (12*s) + 'px';
                p.style.height = (10*s) + 'px';
                var delay = Math.random() * 2.0;
                var dur   = MIN_DUR + Math.random()*(MAX_DUR - MIN_DUR);
                p.style.animationDuration = dur + 's';
                p.style.animationDelay    = delay + 's';
                var sway = (Math.random()*60 + 20) * (Math.random()<.5 ? -1 : 1);
                p.style.setProperty('--sx', sway + 'px');
                p.style.transform = 'rotate(' + (Math.random()*60 - 30) + 'deg)';
                p.addEventListener('animationend', function(){ p.remove(); });
                wrap.appendChild(p);
            }
        })();
        </script>

    </div>
