            background-color: rgba(255,255,255,0.9);
            border-radius: 25px;
            padding: 2px;
            min-width: 250px;
        }

        .search-form .form-control {
            border: none;
            background: transparent;
            padding: 8px 15px;
            border-radius: 25px;
        }

        .search-form .form-control:focus {
            box-shadow: none;
            outline: none;
        }

        .search-form .btn {
            border-radius: 50%;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #2c3e50;
            border: none;
        }

        .search-form .btn:hover {
            background: #34495e;
            transform: scale(1.05);
        }

        .header-icons {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .header-icons > * {
            display: inline-flex;
            align-items: center;
        }

        .header-icons a,
        .header-icons button,
        .header-icons .btn {
