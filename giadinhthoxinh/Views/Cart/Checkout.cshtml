@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/assets/styles/checkout.css" rel="stylesheet" />

<style>
    /* Reset và Base Styles */
    .checkout-page {
        background: linear-gradient(135deg, #8fc4b7 0%, #7fb3a8 100%);
        min-height: 100vh;
        padding: 60px 0;
    }

    .checkout-container {
        max-width: 700px;
        margin: 0 auto;
    }

    /* Page Header */
    .checkout-header {
        text-align: center;
        margin-bottom: 40px;
        color: white;
    }

        .checkout-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .checkout-header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

    /* Main Card */
    .checkout-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        overflow: hidden;
        animation: slideUp 0.5s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .checkout-card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px 30px;
        border: none;
    }

        .checkout-card-header h4 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
        }

    .checkout-card-body {
        padding: 40px 35px;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label {
        font-size: 14px;
        font-weight: 600;
        color: #495057;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .form-label i {
            color: #667eea;
            font-size: 18px;
        }

        .form-label .required {
            color: #dc3545;
            margin-left: 3px;
        }

    .form-control {
        padding: 14px 18px;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        font-size: 15px;
        transition: all 0.3s ease;
        background: #f8f9fa;
        width: 100%;
    }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 4px rgba(102,126,234,0.1);
        }

        .form-control::placeholder {
            color: #adb5bd;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    select.form-control {
        cursor: pointer;
        padding: 10px 14px !important; /* giảm padding cho vừa khung input */
        padding-right: 30px !important;
        color: #212529 !important;
        background-color: #f8f9fa !important;
        font-size: 15px !important;
        line-height: 1.5 !important;
        border: 2px solid #e9ecef !important; /* đồng bộ với input */
        border-radius: 12px !important;
        height: 44px !important; /* cùng chiều cao với input */
        width: 100% !important;
        max-width: 100% !important;
        -webkit-appearance: menulist !important;
        -moz-appearance: menulist !important;
    }

        select.form-control option {
            padding: 8px 12px !important;
            color: #212529 !important;
            background-color: white !important;
        }

        select.form-control:focus {
            border-color: #667eea !important; /* hiệu ứng khi focus */
            background-color: #fff !important;
            box-shadow: 0 0 0 4px rgba(102,126,234,0.1);
        }
        /* Xóa custom arrow, dùng mặc định */
        select.form-control::-ms-expand {
            display: block;
        }

    /* Delivery Method Icons */
    .delivery-option {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Info Banner */
    .info-banner {
        background: #e7f3ff;
        border-left: 4px solid #667eea;
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .info-banner i {
            color: #667eea;
            font-size: 24px;
        }

        .info-banner p {
            margin: 0;
            color: #495057;
            font-size: 14px;
        }

    /* Submit Button */
    .submit-section {
        margin-top: 35px;
        padding-top: 30px;
        border-top: 2px solid #e9ecef;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .btn-submit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 16px 40px;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102,126,234,0.4);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

    .btn-back {
        background: #6c757d;
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        width: 100%;
        text-decoration: none;
    }

        .btn-back:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.2);
            color: white;
            text-decoration: none;
        }

    /* Order Summary (Optional) */
    .order-summary {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 25px;
    }

        .order-summary h5 {
            font-size: 1.1rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .order-summary-item {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        color: #666;
        font-size: 0.95rem;
    }

    .order-summary-total {
        display: flex;
        justify-content: space-between;
        padding: 15px 0;
        border-top: 2px solid #dee2e6;
        margin-top: 10px;
        font-weight: 700;
        font-size: 1.2rem;
        color: #d63031;
    }

    /* Loading Animation */
    .loading-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.7);
        z-index: 9999;
        align-items: center;
        justify-content: center;
    }

        .loading-overlay.show {
            display: flex;
        }

    .spinner {
        width: 60px;
        height: 60px;
        border: 6px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .checkout-page {
            padding: 30px 0;
        }

        .checkout-header h1 {
            font-size: 2rem;
        }

        .checkout-card-body {
            padding: 30px 20px;
        }

        .submit-section {
            flex-direction: column;
        }
    }

    @@media (max-width: 576px) {
        .checkout-header h1 {
            font-size: 1.75rem;
        }

        .checkout-card-body {
            padding: 25px 15px;
        }
    }
    /* Fix cho selected option */
    select.form-control option:checked {
        background-color: #667eea !important;
        color: white !important;
    }

    /* Đảm bảo text hiển thị khi đã chọn */
    select.form-control:not([value=""]) {
        color: #212529 !important;
        font-weight: 500;
    }
</style>

<section class="checkout-page">
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <div class="container">
        <div class="checkout-container">
            <!-- Page Header -->
            <div class="checkout-header">
                <h1>
                    <i class="fa fa-shopping-bag"></i>
                    Thanh Toán Đơn Hàng
                </h1>
                <p>Vui lòng điền đầy đủ thông tin để hoàn tất đơn hàng</p>
            </div>

            <!-- Main Card -->
            <div class="checkout-card">
                <div class="checkout-card-header">
                    <h4>
                        <i class="fa fa-file-text-o"></i>
                        Thông tin đơn hàng
                    </h4>
                </div>

                <div class="checkout-card-body">
                    <!-- Info Banner -->
                    <div class="info-banner">
                        <i class="fa fa-info-circle"></i>
                        <p>Hãy kiểm tra kỹ thông tin trước khi xác nhận. Chúng tôi sẽ liên hệ với bạn để xác nhận đơn hàng.</p>
                    </div>

                    @using (Html.BeginForm("DatHang", "Cart", FormMethod.Post, new { @id = "checkoutForm", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="paymentMethod" name="paymentMethod" value="" />

                        <!-- Họ và tên -->
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fa fa-user"></i>
                                Họ và tên
                                <span class="required">*</span>
                            </label>
                            <input type="text"
                                   id="sCustomerName"
                                   name="sCustomerName"
                                   class="form-control"
                                   placeholder="Nhập họ và tên đầy đủ"
                                   required />
                        </div>

                        <!-- Số điện thoại -->
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fa fa-phone"></i>
                                Số điện thoại
                                <span class="required">*</span>
                            </label>
                            <input type="tel"
                                   id="sCustomerPhone"
                                   name="sCustomerPhone"
                                   class="form-control"
                                   placeholder="Nhập số điện thoại liên hệ"
                                   pattern="[0-9]{10,11}"
                                   title="Vui lòng nhập số điện thoại hợp lệ (10-11 số)"
                                   required />
                        </div>

                        <!-- Địa chỉ -->
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fa fa-map-marker"></i>
                                Địa chỉ giao hàng
                                <span class="required">*</span>
                            </label>
                            <input type="text"
                                   id="sDeliveryAddress"
                                   name="sDeliveryAddress"
                                   class="form-control"
                                   placeholder="Số nhà, tên đường, phường/xã, quận/huyện, tỉnh/thành phố"
                                   required />
                        </div>

                        <!-- Phương thức giao hàng -->
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fa fa-truck"></i>
                                Phương thức giao hàng
                                <span class="required">*</span>
                            </label>
                            <select id="iDeliveryMethod"
                                    name="iDeliveryMethod"
                                    class="form-control"
                                    required>
                                <option value="">-- Chọn phương thức giao hàng --</option>
                                <option value="1">Giao hàng tận nơi (Phí ship theo khu vực)</option>
                                <option value="2">Nhận tại cửa hàng (Miễn phí)</option>
                            </select>
                        </div>

                        <!-- Ghi chú -->
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fa fa-pencil"></i>
                                Ghi chú đơn hàng
                                <span style="color: #6c757d; font-weight: 400; font-size: 13px;">(Tùy chọn)</span>
                            </label>
                            <textarea id="Note"
                                      name="Note"
                                      class="form-control"
                                      placeholder="Ghi chú về đơn hàng, ví dụ: thời gian giao hàng, yêu cầu đặc biệt..."></textarea>
                        </div>

                        <!-- Order Summary -->
                        <div class="order-summary">
                            <h5>
                                <i class="fa fa-list-alt"></i>
                                Tổng quan đơn hàng
                            </h5>
                            <div class="order-summary-item">
                                <span>Tổng tiền hàng:</span>
                                <span>@ViewBag.TongTien</span>
                            </div>
                            <div class="order-summary-item">
                                <span>Phí vận chuyển:</span>
                                <span>Miễn phí</span>
                            </div>
                            <div class="order-summary-total">
                                <span>Tổng thanh toán:</span>
                                <span>@ViewBag.TongTien</span>
                            </div>
                        </div>

                        <!-- Submit Section - 2 nút hiển thị cùng lúc -->
                        <div class="submit-section">
                            <button type="button" class="btn-submit" id="btnSubmit">
                                <i class="fa fa-check-circle"></i>
                                Xác nhận đặt hàng
                            </button>

                            <button type="button" class="btn-submit" id="btnVNPay" style="background: linear-gradient(135deg, #00b09b 0%, #96c93d 100%);">
                                <i class="fa fa-credit-card"></i>
                                Thanh toán VNPay
                            </button>

                            <a href="/cart/cart" class="btn-back">
                                <i class="fa fa-arrow-left"></i>
                                Quay lại giỏ hàng
                            </a>
                        </div>
                    }

                    <script>
                        const form = document.getElementById('checkoutForm');
                        const overlay = document.getElementById('loadingOverlay');
                        const btnSubmit = document.getElementById('btnSubmit');
                        const btnVNPay = document.getElementById('btnVNPay');
                        const paymentMethodInput = document.getElementById('paymentMethod');

                        // Hàm validate form
                        function validateForm() {
                            const phone = document.getElementById('sCustomerPhone').value.trim();
                            const name = document.getElementById('sCustomerName').value.trim();
                            const address = document.getElementById('sDeliveryAddress').value.trim();
                            const deliveryMethod = document.getElementById('iDeliveryMethod').value;
                            const phoneRegex = /^[0-9]{10,11}$/;

                            if (!phoneRegex.test(phone)) {
                                alert('⚠️ Số điện thoại không hợp lệ! Vui lòng nhập 10-11 chữ số.');
                                return false;
                            }

                            if (name.length < 3) {
                                alert('⚠️ Họ và tên phải có ít nhất 3 ký tự!');
                                return false;
                            }

                            if (address.length < 10) {
                                alert('⚠️ Vui lòng nhập địa chỉ chi tiết!');
                                return false;
                            }

                            if (!deliveryMethod) {
                                alert('⚠️ Vui lòng chọn phương thức giao hàng!');
                                return false;
                            }

                            return true;
                        }

                        // Nút "Xác nhận đặt hàng" - thanh toán khi nhận hàng
                        btnSubmit.addEventListener('click', function (e) {
                            e.preventDefault();

                            if (!validateForm()) return;

                            paymentMethodInput.value = 'Thanh toán khi nhận hàng';
                            overlay.classList.add('show');

                            $.ajax({
                                url: '/Cart/DatHangTamThoi',
                                type: 'POST',
                                data: $(form).serialize(),
                                success: function (response) {
                                    overlay.classList.remove('show');
                                    if (response.success) {
                                        alert('✅ Đặt hàng thành công!');
                                        window.location.href = '/Cart/OrderHistory';
                                    } else {
                                        alert('❌ ' + response.message);
                                    }
                                },
                                error: function () {
                                    overlay.classList.remove('show');
                                    alert('❌ Lỗi khi đặt hàng. Vui lòng thử lại!');
                                }
                            });
                        });

                        // Nút "Thanh toán VNPay"
                        btnVNPay.addEventListener('click', function (e) {
                            e.preventDefault();

                            if (!validateForm()) return;

                            paymentMethodInput.value = 'Thanh toán bằng VNPay';
                            overlay.classList.add('show');

                            $.ajax({
                                url: '/Cart/DatHangVNPay',
                                type: 'POST',
                                data: $(form).serialize(),
                                success: function (response) {
                                    overlay.classList.remove('show');
                                    if (response.success) {
                                        // Lưu orderId để sau khi VNPay return, có thể xử lý
                                        sessionStorage.setItem('pendingOrderId', response.orderId);
                                        // Chuyển sang VNPay
                                        window.location.href = '/VnPay/Pay?orderId=' + response.orderId + '&amount=' + response.amount;
                                    } else {
                                        alert('❌ ' + response.message);
                                    }
                                },
                                error: function () {
                                    overlay.classList.remove('show');
                                    alert('❌ Lỗi khi đặt hàng. Vui lòng thử lại!');
                                }
                            });
                        });

                        // Auto-format phone number
                        document.getElementById('sCustomerPhone').addEventListener('input', function (e) {
                            this.value = this.value.replace(/[^0-9]/g, '');
                        });
                    </script>
