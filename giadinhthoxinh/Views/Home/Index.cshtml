<script>
   const carouselController = {
    currentSlide: 0,
    slides: null,
    indicators: null,
    intervalId: null,
    autoPlayDelay: 4000, // 4 giây

    init() {
        this.slides = document.querySelectorAll('.carousel-slide');
        this.indicators = document.querySelectorAll('.indicator');
        this.start();
    },

    moveSlide(direction) {
        this.currentSlide += direction;

        // Xử lý vòng lặp
        if (this.currentSlide >= this.slides.length) {
            this.currentSlide = 0;
        } else if (this.currentSlide < 0) {
            this.currentSlide = this.slides.length - 1;
        }

        this.updateSlide();
    },

    goToSlide(index) {
        this.currentSlide = index;
        this.updateSlide();
        this.restart(); // Restart autoplay khi click indicator
    },

    updateSlide() {
        // Xóa active class khỏi tất cả slides và indicators
        this.slides.forEach(slide => slide.classList.remove('active'));
        this.indicators.forEach(indicator => indicator.classList.remove('active'));

        // Thêm active class cho slide và indicator hiện tại
        this.slides[this.currentSlide].classList.add('active');
        this.indicators[this.currentSlide].classList.add('active');
    },

    start() {
        this.intervalId = setInterval(() => {
            this.moveSlide(1);
        }, this.autoPlayDelay);
    },

    pause() {
        if (this.intervalId) {
            clearInterval(this.intervalId);
            this.intervalId = null;
        }
    },

    resume() {
        if (!this.intervalId) {
            this.start();
        }
    },

    restart() {
        this.pause();
        this.start();
    }
};

// Khởi động carousel khi trang load
document.addEventListener('DOMContentLoaded', function() {
    carouselController.init();
});

